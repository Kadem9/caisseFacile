{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CaisseFacile ASMSP",
  "version": "2.1.5",
  "identifier": "com.kademgrn.caissefacile",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CaisseFacile ASMSP",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' http://localhost:3001 http://127.0.0.1:3001 https://api.caissefacile.asmanissieux.fr asset: tauri: blob: data: https://placehold.co; connect-src 'self' http://localhost:3001 http://127.0.0.1:3001 https://api.caissefacile.asmanissieux.fr https://github.com https://api.github.com;",
      "assetProtocol": {
        "scope": [
          "$APPLOCALDATA/**",
          "$APPLOCALDATA/cached_images/**",
          "$HOME/Library/Application Support/**",
          "/Users/**/Library/Application Support/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Kadem9/caisseFacile/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3OUMwNTFFRjNDNjFDRTcKUldUbkhNYnpIZ1djWjJvcE50K25UVFJXOE1pSy92UzA1WldmcEVNSS9Qa1ovUHIxSzBmMW12UU8K"
    }
  }
}