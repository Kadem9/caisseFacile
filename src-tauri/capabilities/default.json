{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/cached_images/**",
        "$APPDATA/cached_images"
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "core:path:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:3001/**"
        },
        {
          "url": "http://54.36.98.249:3001/**"
        },
        {
          "url": "https://github.com/Kadem9/caisseFacile/**"
        }
      ]
    },
    "updater:default",
    "dialog:default"
  ]
}