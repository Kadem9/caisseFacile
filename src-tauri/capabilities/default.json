{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-close",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPLOCALDATA/**",
        "$APPLOCALDATA/cached_images/**",
        "$APPDATA/**",
        "$APPDATA/cached_images/**",
        "$DOCUMENT/**",
        "$HOME/Library/Application Support/**"
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "core:path:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:*/**"
        },
        {
          "url": "http://127.0.0.1:*/**"
        },
        {
          "url": "https://api.caissefacile.asmanissieux.fr/**"
        },
        {
          "url": "https://github.com/**"
        },
        {
          "url": "https://api.github.com/**"
        }
      ]
    },
    "updater:default",
    "dialog:default"
  ]
}